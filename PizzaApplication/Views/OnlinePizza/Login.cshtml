}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Site Metas -->
    <title>Online Pizza</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Site Icons -->
    @*<link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon" />
        <link rel="apple-touch-icon" href="images/apple-touch-icon.png">*@

    <!-- Bootstrap CSS -->

    <link href="~/Effects/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Site CSS -->

    <link href="~/Effects/style.css" rel="stylesheet" />
    <!-- Responsive CSS -->

    <link href="~/Effects/css/responsive.css" rel="stylesheet" />

    <!-- Custom CSS -->

    <link href="~/Effects/css/custom.css" rel="stylesheet" />

    <script src="~/Effects/js/modernizr.js"></script>

    <script src="https://code.jquery.com/jquery-3.2.1.min.js"
            integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
            crossorigin="anonymous"></script>



</head>
<body id="page-top" class="politics_version">

    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        <div class="container-fluid">
            <a class="navbar-brand js-scroll-trigger" href="#page-top">
                <img class="img-fluid" src="images/logo.png" alt="" />
            </a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fa fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">

                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger active" id="home" href="/OnlinePizza/AddUser"><span>Register</span></a>
                    </li>
                     

                </ul>
            </div>
        </div>
    </nav>


    <div id="contact" class="section db">
        <div class="container-fluid">
            <div class="section-title text-center">
                <h3>Login</h3>
            </div><!-- end title -->

            <div class="row">
                <div class="col-md-12">
                    <div class="contact_form">
                        <div id="message"></div>
                        <form id="contactForm" method="post" action="/OnlinePizza/Login" @*?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)*@>
                            <div class="row">

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input class="form-control" name="Email" id="email" type="email" placeholder="Your Email" required="required" pattern=".+" @@"globex.com" data-validation-required-message="Please enter your email address.">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                </div>
                                <br>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input class="form-control" id="password" name="Password" type="password" placeholder="Enter Password" required="required" data-validation-required-message="Please enter your password.">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                </div>




                                <div class="clearfix"></div>
                                <div class="col-lg-12 text-center">
                                    <div id="success"></div>
                                    <button id="subButton" class="sim-btn hvr-radial-in" data-text="Send Message" type="submit">Submit</button>
                                </div>

                                <div style="color:red; font-weight: bold; font-size:25px; margin-top:20px;" class="col-lg-12 text-center">
                                    @ViewBag.Message
                                </div>

                            </div>
                        </form>
                    </div>
                </div><!-- end col -->
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end section -->
    

</body>
</html>